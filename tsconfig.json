{
  "compilerOptions": {
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "./dist",
    "paths": {
      "configs/*": [
        "configs/*"
      ],
      "modules/*": [
        "modules/*"
      ],
      "shared/*": [
        "shared/*"
      ],
      "utils/*": [
        "utils/*"
      ]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es5"
  }
}
